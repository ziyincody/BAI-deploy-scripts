# shellcheck source=lib/common.sh
. "$LIB_DIR/common.sh"

. "$OUT_DIR/load-core-addr-temp"

base_caller_reward=$(jq -r ".single_ceiling_setter.base_caller_reward | values" "$CONFIG_FILE")
base_caller_reward=$(echo "$base_caller_reward"*10^27 | bc)
max_caller_reward=$(jq -r ".single_ceiling_setter.max_caller_reward | values" "$CONFIG_FILE")
max_caller_reward=$(echo "$max_caller_reward"*10^27 | bc)

reward_increase=$(jq -r ".single_ceiling_setter.reward_increase | values" "$CONFIG_FILE")
reward_increase=$(echo "$reward_increase"*10^27 | bc)
update_delay=$(jq -r ".single_ceiling_setter.update_delay | values" "$CONFIG_FILE")

ceiling_percentage_change=$(jq -r ".single_ceiling_setter.ceiling_percentage_change | values" "$CONFIG_FILE")

max_collateral_ceiling=$(seth --to-int256 "$(jq -r ".single_ceiling_setter.max_collateral_ceiling | values" "$CONFIG_FILE")")

min_collateral_ceiling=$(jq -r ".single_ceiling_setter.min_collateral_ceiling | values" "$CONFIG_FILE")
min_collateral_ceiling=$(echo "$min_collateral_ceiling"*10^45 | bc)

tokens=$(jq -r ".tokens | keys_unsorted[]" "$CONFIG_FILE")
collateral_token="${tokens[0]}"
collateral_types=$(jq -r ".tokens.${collateral_token}.collateral_types | keys_unsorted[]" "$CONFIG_FILE")
collateral_token_type="${collateral_types[0]}"
collateral_type_name=$(seth --to-bytes32 "$(seth --from-ascii "${collateral_token}-${collateral_token_type}")")

GEB_SINGLE_CEILING_SETTER="$(dappCreate geb-debt-ceiling-setter SingleSpotDebtCeilingSetter \
    "$GEB_SAFE_ENGINE" \
    "$GEB_ORACLE_RELAYER" \
    "$GEB_STABILITY_FEE_TREASURY" \
    "$collateral_type_name" \
    "$base_caller_reward" \
    "$max_caller_reward" \
    "$reward_increase" \
    "$update_delay" \
    "$ceiling_percentage_change" \
    "$max_collateral_ceiling" \
    "$min_collateral_ceiling" \
    )"

# Set up authorization
sethSend "$GEB_SAFE_ENGINE" "addAuthorization(address)" "$GEB_SINGLE_CEILING_SETTER"

cat > "$OUT_DIR/load-debt-ceiling-setter-addr-temp" <<EOF
#!/bin/bash
export GEB_SINGLE_CEILING_SETTER=$GEB_SINGLE_CEILING_SETTER
EOF
