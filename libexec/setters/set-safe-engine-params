# shellcheck source=lib/common.sh
. "$LIB_DIR/common.sh"

# Get config variables
CONFIG_FILE="$OUT_DIR/config.json"
# Get addresses
loadAddresses

log "SET SAFE ENGINE PARAMS:"

global_debt_ceiling="$(jq -r ".safe_engine.global_debt_ceiling" "$CONFIG_FILE")"
global_debt_ceiling=$(seth --to-int256 "$global_debt_ceiling")
sethSend "$(eval echo "\$GEB_SAFE_ENGINE")" 'modifyParameters(bytes32,uint256)' "$(seth --to-bytes32 "$(seth --from-ascii "globalDebtCeiling")")" "$global_debt_ceiling"

safe_debt_ceiling="$(jq -r ".safe_engine.safe_debt_ceiling" "$CONFIG_FILE")"
safe_debt_ceiling=$(echo "$safe_debt_ceiling"*10^18 | bc)
safe_debt_ceiling="${safe_debt_ceiling%.*}"
sethSend "$(eval echo "\$GEB_SAFE_ENGINE")" 'modifyParameters(bytes32,uint256)' "$(seth --to-bytes32 "$(seth --from-ascii "safeDebtCeiling")")" "$safe_debt_ceiling"
